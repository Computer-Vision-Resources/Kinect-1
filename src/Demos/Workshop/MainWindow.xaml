<Window x:Class="Kinect.Workshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="784" Width="800">
    <Window.DataContext>
        <Binding Mode="OneWay"
                 Source="{StaticResource MainViewModelDataSource}" />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="366*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*" />
            <ColumnDefinition Width="150*" />
            <ColumnDefinition Width="482*" />
        </Grid.ColumnDefinitions>
        <Button Content="Start Kinect" Click="{Binding StartButton}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" />
        <Button Content="Stop Kinect" Click="{Binding StopButton}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" />
        <ListBox HorizontalAlignment="Stretch" ItemsSource="{Binding Messages}" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />
        <Image Source="{Binding Camera}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"></Image>
        <Image Source="Assets/skelet.png" Grid.Column="3" Grid.Row="0" Grid.RowSpan="3"></Image>
        <Canvas Grid.Column="3" Grid.Row="0" Grid.RowSpan="2">
            <Label Canvas.Left="228" Canvas.Top="8" Content="{Binding Head}" Height="28" RenderTransformOrigin="0.466,1.036" HorizontalAlignment="Center" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="228" Canvas.Top="173.5" Content="{Binding Neck}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="92.815" Canvas.Top="173.5" Content="{Binding LeftShoulder}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="315.5" Canvas.Top="173.5" Content="{Binding RightShoulder}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="225.155" Canvas.Top="288" Content="{Binding Torso}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="39" Canvas.Top="288" Content="{Binding LeftElbow}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="365.5" Canvas.Top="288" Content="{Binding RightElbow}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="-13" Canvas.Top="429.5" Content="{Binding LeftHand}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="397.208" Canvas.Top="429.5" Content="{Binding RightHand}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="142.315" Canvas.Top="429.5" Content="{Binding LeftHip}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="290" Canvas.Top="429.5" Content="{Binding RightHip}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="142.315" Canvas.Top="577" Content="{Binding LeftKnee}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="290" Canvas.Top="577" Content="{Binding RightKnee}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="111" Canvas.Top="692" Content="{Binding LeftFoot}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
            <Label Canvas.Left="290" Canvas.Top="692" Content="{Binding RightFoot}" Height="28" FontSize="14.667" FontWeight="Bold" Foreground="#FFE20000" />
        </Canvas>
    </Grid>
</Window>
